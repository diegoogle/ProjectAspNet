@using MiPrimeraAplicacionWeb.Models
@model BusCLS
@{
    ViewBag.Title = "Agregar";
    List<SelectListItem> listaTipoBus = (List<SelectListItem>)ViewBag.listaTipoBus;
    List<SelectListItem> listaMarca = (List<SelectListItem>)ViewBag.listaMarca;
    List<SelectListItem> listaModelo = (List<SelectListItem>)ViewBag.listaModelo;
    List<SelectListItem> listaSucursal = (List<SelectListItem>)ViewBag.listaSucursal;
}

<h2>Agregar Bus</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Agregar", "Bus", FormMethod.Post, new { @id="frmAgregar"})) {              
            <div>
                @Html.LabelFor(p => p.iidSucursal)                
                @Html.DropDownList("iidSucursal", listaSucursal, null, new { @class = "form-control" })
                @Html.ValidationMessage("iidSucursal", new { @class = "text-danger" })
            </div>            
            <div>
                @Html.LabelFor(p => p.placa)                
                @Html.TextBoxFor(p => p.placa, new { @class = "form-control" })
                @Html.ValidationMessage("placa", new { @class = "text-danger" })
                @if (Model != null && Model.mensajeError != null) { 
                    @Html.Label(Model.mensajeError, new {@class="text-danger"})
                }
            </div>            
            <div>
                @Html.LabelFor(p => p.iidTipoBus)                
                @Html.DropDownList("iidTipoBus", listaTipoBus, null, new { @class = "form-control" })
                @Html.ValidationMessage("iidTipoBus", new { @class = "text-danger" })                
            </div>
            <div>
                @Html.LabelFor(p => p.fechaCompra)                
                @Html.EditorFor(p => p.fechaCompra, new { @class = "form-control" })
                @Html.ValidationMessage("fechaCompra", new { @class = "text-danger" })                
            </div>
            <div>
                @Html.LabelFor(p => p.iidModelo)
                @Html.DropDownList("iidModelo", listaModelo, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.iidModelo, "", new { @class = "text-danger" })                
            </div>
            <div>
                @Html.LabelFor(p => p.numeroFilas)                
                @Html.EditorFor(p => p.numeroFilas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(p => p.numeroFilas, "", new { @class = "text-danger" })                
            </div>
            <div>
                @Html.LabelFor(p => p.numeroColumnas)                
                @Html.EditorFor(p => p.numeroColumnas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(p => p.numeroColumnas, "", new { @class = "text-danger" })               
            </div>
            <div>
                @Html.LabelFor(p => p.descripcion)                
                @Html.EditorFor(p => p.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(p => p.descripcion, "", new { @class = "text-danger" })                
            </div>
            <div>
                @Html.LabelFor(p => p.observacion)                
                @Html.EditorFor(p => p.observacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(p => p.observacion, "", new { @class = "text-danger" })                
            </div>
            <div>
                @Html.LabelFor(p => p.iidMarca)                
                @Html.DropDownList("iidMarca", listaMarca, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.iidMarca, "", new { @class = "text-danger" })                
            </div>
            <div style="margin:auto">                
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Guardar
                </button>
                @Html.ActionLink("Regresar", "Index", "Bus", null, new { @class = "btn btn-danger" })
            </div>
            }
        </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Guardar los cambios?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div style="padding:1em">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-info" onclick="Agregar()">Aceptar</button>
            </div>
        </div>
    </div>
</div>
<script>
    function Agregar() {
        var frmAgregar = document.getElementById("frmAgregar");
        frmAgregar.submit();
    }
</script>

